# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build client`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t client`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3232

RUN apk add --no-cache git \
    libpng-dev \
    ca-certificates \
    python3 \
    build-base

WORKDIR /app

RUN addgroup --system client && \
          adduser --system -G client client

COPY dist/apps/client .
RUN chown -R client:client .
RUN npm install
EXPOSE 3232
CMD [ "npm", "start" ]
